{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/scripts/*"]
    }
  },
  "include": ["**/*.ts", "./cypress/interfaces/*.d.ts"]
}
